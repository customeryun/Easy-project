<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/will_approval_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_launcher"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/will_approval_photo"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/will_approval_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="陈红提价的请假"
            />
        <TextView
            android:id="@+id/will_approval_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请假类型:事假"
            />
        <TextView
            android:id="@+id/will_approval_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始时间:2019-04-03 上午"
            />
        <TextView
            android:id="@+id/will_approval_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束时间:2019-04-03 上午"
            />
        <TextView
            android:id="@+id/will_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3月26日 12:00"/>
    </LinearLayout>
</RelativeLayout>
