<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9F9F9">

    <include layout="@layout/activity_title_layout"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/search_view"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:hint="搜索"
                    android:textSize="14dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>
                <com.android.easymanager.ui.widget.settings.ItemView
                    android:id="@+id/contact_new"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    app:left_text="新的好友"
                    app:show_left_icon="true"
                    app:show_top_line="true"
                    android:showDividers="middle"
                    app:show_right_arrow="false"
                    />
                <com.android.easymanager.ui.widget.settings.ItemView
                    android:id="@+id/contact_teacher"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    app:left_text="老师通讯录"
                    app:show_left_icon="true"
                    app:show_right_arrow="false"
                    />
                <com.android.easymanager.ui.widget.settings.ItemView
                    android:id="@+id/contact_student"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    app:left_text="学生通讯录"
                    app:show_left_icon="true"
                    app:show_right_arrow="false"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:text="我的好友"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    android:gravity="center_vertical"
                    android:textColor="#101010"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DBDADA"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/contact_list"
                    android:background="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
        </ScrollView>
        <com.android.easymanager.ui.widget.contact.LetterView
            android:id="@+id/letter_view"
            android:background="#f9f9f9"
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>
</LinearLayout>