<?xml version="1.0" encoding="utf-8"?>
<com.android.easymanager.ui.widget.SwipeMenuView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff"
    android:layout_margin="@dimen/space_10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/space_10dp">

        <ImageView
            android:id="@+id/rv_left"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_course_done" />

        <LinearLayout
            android:id="@+id/rv_right"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_toRightOf="@id/rv_left"
            android:background="@drawable/ic_schudule_item_bg"
            android:layout_marginLeft="@dimen/space_10dp"
            android:padding="@dimen/space_10dp"
            android:orientation="vertical"
            android:shadowColor="#1a000000"
            android:shadowDx="0"
            android:shadowDy="4">

            <TextView
                android:id="@+id/rv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="汉语言课程"
                android:textColor="#333333"
                android:gravity="center"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/rv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8:10-23:10"
                android:textColor="#333333"
                android:gravity="center"
                android:textSize="15dp" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="115dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/schedule_edit_img"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_schedule_edit" />

        <Button
            android:id="@+id/schedule_edit_del"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:background="@drawable/ic_schedule_del"
            />
    </RelativeLayout>
</com.android.easymanager.ui.widget.SwipeMenuView>
